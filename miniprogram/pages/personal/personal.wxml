<!--
  This page is the attendance page
  Location: pages/attendance/attendance
-->

<!--This is the mask page-->
<view wx:if="{{load < 2}}" class="mask">
  <text>小程序加载中…{{complete}}%</text>
</view>


<view class="mainPage">
  <!--
    The Title Block
    The title of the miniprogram
  -->
  <view class="TT">
    <image src="cloud://msnprototype-2pun5.6d73-msnprototype-2pun5-1300672980/logo.png"
     mode="aspectFit" style="height: 130rpx; margin-top: 30rpx" bindload="imgLoad"></image>
    <text id="title">Mainland Student Network</text>
  </view>

  
  <!--
    The Login Block
  -->
  <view class="LG">
    <button id="authorize" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
    登录授权</button>
    <block wx:else>
      <image id="userimg" src="{{userInfo.avatarUrl}}" mode="aspectFit" style="height: 250rpx; width: 250rpx"></image>
      <text style="margin-top: 30rpx; font-size: 40rpx">\n{{userInfo.nickName}}\n</text>
      <text id="attendanceInfo">\n注册日期：{{userStartDate}}\n已注册天数：{{userHistory}}\n积分：{{userScore}}</text>
    </block>
  </view>


  <!--
    The End Block:
  -->
  <view class="TE">
    <image src="cloud://msnprototype-2pun5.6d73-msnprototype-2pun5-1300672980/logow.png"
     mode="aspectFit" style="height: 100rpx; margin-top: 30rpx; margin-bottom: 20rpx" bindload="imgLoad"></image>
    <text id="end">
      {{end}}
    </text>
  </view>


</view>
