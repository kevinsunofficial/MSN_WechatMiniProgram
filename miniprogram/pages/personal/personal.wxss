/**
 * This page is the personal page
 */

 Page {
    text-align: center;
}

.mask {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgb(25, 31, 38);
    font-size: 40rpx;
    font-weight: 600;
    color: rgb(245, 245, 245);
    font-family: Arial, Helvetica, sans-serif;
    opacity: 1;
    z-index: 1;
  }

.mainPage {
    display: flex;
    flex-direction: column;
    background-color: rgb(245, 245, 245);
}

.TT {
    margin-top: 0rpx;
}

.LG {
    border-top: solid darkgray 5rpx;
}

#authorize {
    margin-top: 200rpx;
    margin-bottom: 500rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: lightpink;
    color: white;
    height: 100rpx;
    width: 400rpx;
    border-radius: 25rpx;
}

#userimg {
    border-radius: 10%;
}

.info {
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    height: 200rpx;
    width: 710rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 3rpx 3rpx 3rpx 3rpx lightgray;
}

#profile {
    height: 200rpx;
    width: 200rpx;
    border-radius: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

#nickname {
    height: 200rpx;
    width: 500rpx;
    border-radius: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    font-size: 40rpx;
    line-height: 60rpx;
}

.hist {
    margin-left: 40rpx;
    margin-right: 40rpx;
    height: 360rpx;
    width: 670rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.histitem {
    margin-top: 20rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-radius: 10rpx;
    background-color: rgb(245, 245, 245);
    height: 100rpx;
    width: 670rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 3rpx 3rpx 3rpx 3rpx lightgray;
}

#name {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 350rpx;
    border-right: 20rpx;
    font-weight: 600;
}

#content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 300rpx;
    border-radius: 20rpx;
    background-color: rgb(253, 218, 59);
    font-weight: 600;
}