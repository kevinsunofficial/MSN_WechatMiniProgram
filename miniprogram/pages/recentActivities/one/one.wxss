Page {
  text-align: center;
}

.mask {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgb(25, 31, 38);
  font-size: 40rpx;
  font-weight: 600;
  color: rgb(245, 245, 245);
  font-family: Arial, Helvetica, sans-serif;
  opacity: 1;
  z-index: 1;
}

.main {
  display: flex;
  flex-direction: column;
}

.TT {
  margin-top: 0rpx;
}

#title {
  font-size: 50rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  text-shadow: 1rpx 1rpx 2rpx gray;
  line-height: 100rpx;
  color: rgb(0, 86, 99);
}

.Content {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  border-top-style: solid;
  border-width: 5rpx;
  border-color: darkgray;
}

#ctitle {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: 50rpx;
  font-weight: 600;
}

#txt {
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  text-align: left;
}

.TE {
  margin-top: 50rpx;
  height: 400rpx;
  background-color: rgb(43, 43, 43);
  font-size: 20rpx;
  color: white;
}