/**
 * This page is the eventSignup page Three
 */

 Page {
  text-align: center;
}

.mask {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgb(25, 31, 38);
  font-size: 40rpx;
  font-weight: 600;
  color: rgb(245, 245, 245);
  font-family: Arial, Helvetica, sans-serif;
  opacity: 1;
  z-index: 1;
}

.mainPage {
  display: flex;
  flex-direction: column;
  background-color: rgb(245, 245, 245);
}

.TT {
  margin-top: 0rpx;
}

#title {
  font-size: 50rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  text-shadow: 1rpx 1rpx 2rpx gray;
  line-height: 100rpx;
  color: rgb(0, 86, 99);
}

.INFO {
  margin-top: 50rpx;
  border-top-style: solid;
  border-width: 5rpx;
  border-color: darkgrey;
  line-height: 150rpx;
  font-size: 40rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
}

input {
  height: 75rpx;
  width: 500rpx;
  border-radius: 10rpx;
  border-width: 3rpx;
  border-color: rgb(43, 43, 43);
  border-style: groove;
  font-size: 30rpx;
  font-weight: 400;
}

#picker {
  background-color: rgb(236, 236, 236);
  font-size: 35rpx;
  line-height: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  width: 500rpx;
  font-weight: 400;
}

.wechat {
  font-size: 40rpx;
  font-weight: 800;
  height: 100rpx;
  background-color: #91ed61;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit {
  font-size: 40rpx;
  font-weight: 800;
  height: 100rpx;
  background-color: lightgoldenrodyellow;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reset {
  font-size: 40rpx;
  font-weight: 800;
  height: 100rpx;
  background-color: lightskyblue;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.TE {
  margin-top: 50rpx;
  height: 450rpx;
  background-color: rgb(43, 43, 43);
  font-size: 20rpx;
  color: white;
}