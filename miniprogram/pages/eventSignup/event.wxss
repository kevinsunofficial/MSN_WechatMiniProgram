/**
 * This page is the eventSignup page
 */

Page {
    text-align: center;
}

.mask {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgb(25, 31, 38);
    font-size: 40rpx;
    font-weight: 600;
    color: rgb(245, 245, 245);
    font-family: Arial, Helvetica, sans-serif;
    opacity: 1;
    z-index: 1;
}

.mainPage {
    display: flex;
    flex-direction: column;
    background-color: rgb(245, 245, 245);
}

.TT {
    margin-top: 0rpx;
}

#title {
    font-size: 50rpx;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    text-shadow: 1rpx 1rpx 2rpx gray;
    line-height: 100rpx;
    color: rgb(0, 86, 99);
}

.INFO {
    margin-top: 50rpx;
    border-top-style: solid;
    border-width: 5rpx;
    border-color: darkgrey;
    line-height: 150rpx;
    font-size: 40rpx;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    align-items: center;
}

button {
    margin-top: 75rpx;
    font-size: 40rpx;
    font-weight: 800;
    height: 150rpx;
    background-color: lightblue;
    border-radius: 25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.TE {
    margin-top: 100rpx;
    height: 450rpx;
    background-color: rgb(43, 43, 43);
    font-size: 20rpx;
    color: white;
}