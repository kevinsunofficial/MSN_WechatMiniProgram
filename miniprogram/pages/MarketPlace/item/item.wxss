/* pages/item/item.wxss */
Page {
  text-align: center;
  background-color: darkgray;
}

swiper{
  height:750rpx;
  line-height: 100rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  align-content: center;
  background-color: white;
  border-radius: 25rpx;
  margin-top: -50rpx;
  padding-bottom: 200rpx;
  z-index: 1;
}

.stock {
  display: flex;
  flex-direction: row;
  align-content: center;
  border-radius: 15rpx;
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-bottom: 50rpx;
  margin-right: 50rpx;
  border-bottom-color: rgb(65, 201, 222);
  border-bottom-width: 5rpx;
  border-bottom-style: solid;
}

#name {
  width: 400rpx;
  align-self: flex-start;
  font-size: 40rpx;
  line-height: 50rpx;
  font-weight: 600;
}

#view {
  width: 400rpx;
  align-self: flex-start;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #777;
}

#price {
  width: 100rpx;
  align-items: center;
  flex-grow: 4;
  font-size: 50rpx;
  margin: 20rpx;
  line-height: 60rpx;
}

#dollar {
  color: rgb(0, 86, 99);
  font-weight: 600;
}

.contact {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  border-radius: 15rpx;
  /* background-color: lightgreen; */
  margin-left: 50rpx;
  margin-right: 50rpx;
}

#dscrpt {
  width: 650rpx;
  text-align: left;
  font-size: 35rpx;
  line-height: 50rpx;
  margin-bottom: 35rpx;
  color: #777;
}

#merchant {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 35rpx;
  line-height: 50rpx;
  /* background-color: palegoldenrod; */
  margin-bottom: 35rpx;
}

.wxid {
  display: flex;
  flex-direction: column;
  align-content: center;
  border-radius: 15rpx;
  background-color: rgb(126, 215, 228);
  margin-left: 50rpx;
  margin-bottom: 50rpx;
  margin-right: 50rpx;
}

#info {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  border-radius: 15rpx;
  margin-top: 5rpx;
  margin-left: 50rpx;
  margin-bottom: 0rpx;
  margin-right: 50rpx;
}

#pic {
  width: 100rpx;
  font-size: 45rpx;
  line-height: 50rpx;
  background-color: rgb(78, 160, 199);
  margin-right: 50rpx;
  margin-left: 50rpx;
  border-radius: 25%;
}

#nick {
  font-size: 28rpx;
  /* margin-left: 10rpx; */
}

#id {
  width: 400rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin-top: 10rpx;
  background-color: lightgoldenrodyellow;
}

.touch {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  background-color: white;
  
}

#copy {
  margin-top: 20rpx;
  background-color: rgb(0, 86, 99);
  color:white;
  font-size: 35rpx;
  font-weight: 600;
  height: 100rpx;
  width: 300rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}