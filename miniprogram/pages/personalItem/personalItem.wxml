<view class="mainPage">
  <!--
    The Title Block
    The title of the miniprogram
  -->
  <view class="TT">
    <image src="cloud://msnprototype-2pun5.6d73-msnprototype-2pun5-1300672980/logo.png"
     mode="aspectFit" style="height: 130rpx; margin-top: 30rpx" bindload="imgLoad"></image>
    <text id="title">My Listings</text>
  </view>

  
  <!--
    The Login Block
  -->
  <view class="LG">

  <block class="" wx:for="{{itemList}}" wx:key="_id">
    <navigator url='../item/item?id={{item._id}}'>
      <view class="weui-cells">
          <mp-slideview show="{{false}}" buttons="{{slideButtons}}" data-index="{{index}}" bindbuttontap="slideButtonTap">
              <mp-cell value="{{item.name}}" footer="${{item.price}}">
                <image slot="icon" src="{{item.image[0]}}" style="margin-right: 6px;vertical-align: middle;width:50px; height: 50px;" mode="aspectFill"></image>
              </mp-cell>
          </mp-slideview>
      </view>
    </navigator>
  </block>    
  </view>



  <!--
    The End Block:
  -->
  <view class="TE">
    <image src="cloud://msnprototype-2pun5.6d73-msnprototype-2pun5-1300672980/logow.png"
     mode="aspectFit" style="height: 100rpx; margin-top: 30rpx; margin-bottom: 20rpx" bindload="imgLoad"></image>
    <text id="end">
      {{end}}
    </text>
  </view>


</view>
